# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[Makefile]
indent_style = tab
indent_size = 4
insert_final_newline = true

[{*.md,*.Rmd}]
indent_size = 2

[{*.yml,*.yaml}]
indent_size = 2
